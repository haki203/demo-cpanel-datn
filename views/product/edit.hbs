                <div class="card w-100">
                    <div class="card-body w-100 ">

                        <!-- Browser Default Validation -->
                        <form class="row g-3" method="post" action="/cpanel/product/{{product._id}}/edit"
                            enctype="multipart/form-data">
                            <div class="col-md-12">
                                <label for="validationDefault01" class="form-label">Name</label>
                                <input type="text" name="title" class="form-control" id="validationDefault01"
                                    value="{{product.title}}" required>
                            </div>
                            <div class="col-md-12">
                                <label for="validationDefault02" class="form-label">Description</label>
                                <input style="height: 60px;" type="text" name="description" class="form-control"
                                    id="validationDefault02" value="{{product.description}}" required>
                            </div>
                            <div class="col-md-12">
                                <label for="validationDefault02" class="form-label">PDF</label>
                                <input type="text" name="pdf" class="form-control" id="validationDefault02"
                                    value="{{product.pdf}}" required>
                            </div>
                            <div class="col-md-12">
                                <label for="validationDefault02" class="form-label">Audio</label>
                                <input type="text" name="audio" class="form-control" id="validationDefault02"
                                    value="{{audioArray}}" required>
                            </div>
                            <div class="col-md-12">
                                <label for="validationDefault02" class="form-label">Public At</label>
                                <input type="number" name="publicAt" class="form-control" id="validationDefault02"
                                    value="{{product.publicAt}}" required>
                            </div>
                            <div class="col-md-12">
                                <label for="validationDefault02" class="form-label">Image</label>
                                <input type="text" oninput="updateImage(this.value)" name="image" class="form-control"
                                    id="validationDefault02" value="{{product.image}}" required>
                                <img id="img" src="{{product.image}}" style="width: 100px;height: 120px;" />
                            </div>
                            <div class="col-md-12">
                                <label for="validationDefault03" class="form-label">Mục lục</label>
                                <input type="text" name="mucluc" value="{{muclucs}}" class="form-control"
                                    id="validationDefault03" required>
                            </div>

                            <div class="col-md-12">
                                <label for="validationDefault02" class="form-label">Số trang</label>
                                <input type="number" name="max" class="form-control" id="validationDefault02"
                                    value="{{product.max}}" required>
                            </div>
                            <div class="col-12">
                                <label for="validationDefault03" class="form-label">Miễn phí?</label>
                                <select class="form-select" name="free" aria-label="Default select example">
                                    <option value="true">Miễn phí</option>
                                    <option value="false">Không miễn phí</option>
                                </select>
                            </div>
                            <script>
                                function updateImage(newSrc) {
                                    // Lấy thẻ img
                                    var imgElement = document.getElementById("img");

                                    // Cập nhật đường dẫn hình ảnh của thẻ img
                                    imgElement.src = newSrc;
                                }
                            </script>


                            <div class="col-12">
